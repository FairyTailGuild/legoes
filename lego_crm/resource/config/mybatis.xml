        </insert>
        <delete id = "deleteContact" parameterType = "java.util.HashMap">
                <![CDATA[delete from `crm_contact`]]>
                <where>
                        <if test = "null != uuid">
                                <![CDATA[and `uuid` = #{uuid}]]>
                        </if>
                        <if test = "null != enterprise_uuid">
                                <![CDATA[and `enterprise_uuid` = #{enterprise_uuid}]]>
                        </if>
                </where>
        </delete>
