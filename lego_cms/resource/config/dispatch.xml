                                non-select,selectCmsType:name,id->ne_id;update,updateCmsType:id,name,description,sn_description
                        </namespace>
                        <permission>cms_modifyCmsType</permission>
                        <parameters>
                                <parameter>
                                        <!-- 编号（大于等于1的数字） -->
                                        <name>id</name>
                                        <type>integer</type>
                                        <format>^[1-9]+[0-9]*$</format>
                                        <isNull>false</isNull>
                                </parameter>
                                <parameter>
                                        <!-- 类别名称（2-32个汉字、字符或数字） -->
                                        <name>name</name>
                                        <type>string</type>
                                        <format>^[\u4e00-\u9fffa0-9a-zA-Z]{2,32}$</format>
                                        <isNull>false</isNull>
                                </parameter>
                                <parameter>
                                        <!-- 类别描述（2-64个汉字、字符或数字） -->
                                        <name>description</name>
                                        <type>string</type>
                                        <format>^[\u4e00-\u9fffa0-9a-zA-Z]{2,64}$</format>
                                        <isNull>true</isNull>
                                </parameter>
                                <parameter>
                                        <!-- 类别描述（置空） -->
                                        <name>sn_description</name>
                                        <type>string</type>
                                        <format>^set_null$</format>
                                        <isNull>true</isNull>
                                </parameter>
                        </parameters>
                </servlet>
                <servlet>
                        <!-- 名称: 获取类别 -->
